<odoo>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="dms_action_window">
        <field name="name">DMS window</field>
        <field name="res_model">dms.dms</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context" eval="{'search_default_filter_is_root':1}"/>
    </record>

    <!-- Top menu item -->
    <menuitem name="DMS" id="dms.menu_root" action="dms_action_window"/>
